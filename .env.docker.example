# Docker Environment Configuration for MindsDB Streamlined
# Copy this file to .env.docker and fill in your actual credentials
# This file is used by docker-compose.streamlined.yml

# MindsDB API Configuration
MINDS_API_KEY=your_mindsdb_api_key_here

# Airtable Integration
AIRTABLE_API_KEY=your_airtable_api_key_here

# Hugging Face Integration
HUGGING_FACE_API_KEY=your_hugging_face_api_key_here

# OpenAI Integration
OPENAI_API_KEY=your_openai_api_key_here

# Supabase PostgreSQL Database
SUPABASE_POSTGRES_URL=postgresql://username:password@host:port/database

# S3/CloudFlare R2 Storage
S3_BUCKET_URL=your_s3_bucket_url_here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# MindsDB Configuration
MINDSDB_STORAGE_DIR=/home/mindsdb/data
MINDSDB_CONFIG_PATH=/home/mindsdb/config.json
MINDSDB_APIS=http
MINDSDB_LOG_LEVEL=INFO
MINDSDB_ENABLED_HANDLERS=airtable,supabase,gmail,google_analytics,lightwood,huggingface,huggingface_api,langchain,langchain_embedding,pgvector,postgres,sheets,s3,minds_endpoint,rag
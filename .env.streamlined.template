# MindsDB Streamlined Environment Configuration
# Copy this file to .env.streamlined and customize as needed

# Storage directory for MindsDB data
MINDSDB_STORAGE_DIR=./data

# Configuration file path
MINDSDB_CONFIG_PATH=./config.json

# APIs to enable (comma-separated: http,mysql,postgres)
MINDSDB_APIS=http

# Enabled handlers (comma-separated list)
# Only these 15 handlers are available in the streamlined version
MINDSDB_ENABLED_HANDLERS=airtable,supabase,gmail,google_analytics,lightwood,huggingface,huggingface_api,langchain,langchain_embedding,pgvector,postgres,sheets,s3,minds_endpoint,rag

# Docker environment flag
MINDSDB_DOCKER_ENV=False

# Log level (DEBUG, INFO, WARNING, ERROR)
MINDSDB_LOG_LEVEL=INFO

# Optional: Custom host and port for HTTP API
# MINDSDB_HTTP_HOST=0.0.0.0
# MINDSDB_HTTP_PORT=47334

# Optional: Database connection settings for MySQL/PostgreSQL APIs
# MINDSDB_MYSQL_HOST=0.0.0.0
# MINDSDB_MYSQL_PORT=47335
# MINDSDB_POSTGRES_HOST=0.0.0.0
# MINDSDB_POSTGRES_PORT=47336